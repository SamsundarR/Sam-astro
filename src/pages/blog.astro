---
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';

const pageTitle = "Blog Page";
---
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>Astro</title>
    <style>
      h1 {
          color: purple;
          font-size: 4rem;
        }
        .skill {
            color: var(--skillColor);
            font-weight: bold;
        }
        p,ul{
          color: aliceblue
        }
        body{
          justify-content: center;
        }
        .hero-image{
          width: 10%;
          align-items: center;
          height: 5%;
        }
    </style>
  </head>
  <body>
    <Navigation/><Footer/>
    <h1>{pageTitle}</h1>
    <center><img src="/logo.png" alt="Example Image" class="hero-image"/></center>
    <h2>My Astro Learning Blog</h2>
    <center><p>This is where I will post about my journey learning Astro.</p>
    <ul>
      <li><a href="/posts/post-1/">Post 1</a></li>
      <li><a href="/posts/post-2/">Post 2</a></li>
    </ul>
    
    <script>
      import "../scripts/menu.js";
    </script></center>
  </body>
</html>